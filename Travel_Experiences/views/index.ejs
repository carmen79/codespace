<%include _header.ejs%>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" style=" width:80%; height: 400px; opacity: 0.6"  src="/img/mapa_antiguo.jpg" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
        <h1 style="color:black;font-size: 48px; ">Experiencias de viajes</h1>
        <h3 style= "color:black;font-size: 32px;">
         Sueña, Viaja, Comparte
          
        </h3>
      </div>
    </div>
    <% for (let i = 0; i < cities.length; i++) {%>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/<%=cities[i].name%>.jpg" style=" width:80%; height: 400px"   alt="First slide">
      <div class="carousel-caption d-none d-md-block">
        <h1><%= cities[i].name %></h1>
        <h3 style="font-style: italic"> se hace viaje al viajar</h3>
      </div>
    </div>
    <% } %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container marketing" ></div>

  <!-- Three columns of text below the carousel -->
 
  <div class="row"> 
      <% for (let i = 0; i < 4 && i < categories.length; i++) {%>
        <div class="col-lg-3" style= "text-align: center; margin-top:30px;">
          <img class="rounded-circle img_zoom" id="" src="/img/<%=categories[i].title%>.jpg" alt="" width="140" height="140">
          <h2><%=categories[i].title%></h2>
          <p><%=categories[i].description%></p>
          <!-- <p><a class="btn btn-secondary" href="" role="button">Descubre </a></p> -->
          <button type="button" class="btn" style="background-color:rgb(235, 156,38); color:white" data-toggle="modal" data-target="#exampleModalCenter">
              Descubre más</button>
          <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Listado de viajes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <p>Aquí podrás consultar los viajes de esta categoría</p>
                  </div>
                </div>
              </div>
            </div>
        </div>
    <%}%>
  </div>
</div>

<hr>

<%include _footer.ejs%>