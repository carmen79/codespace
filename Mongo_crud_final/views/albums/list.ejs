<% include ../_header %>

<body>

  <div class="container-fluid border p-0">
    <table class="table m-0">
      <thead class="thead-light">
        <tr>
          <th scope="col">Cover</th>
          <th scope="col">#</th>
          <th scope="col">Album</th>
          <th scope="col">Released</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
        <%
        if (data) {
          for (const elem of data) {
            %>

        <tr>
          <td>
            <img width="75px" src="/uploads/<%= elem.coverFilename %>" alt="<%= elem.name %>">
          </td>
          <td><%= elem._id %></td>
          <td><%= elem.name %></td>
          <td><%= elem.releaseYear %></td>
          <td class="bg-dark text-center">
            <a href="/albums/edit/<%= elem._id%>" class="btn btn-warning">Editar</a>
          </td>
          <td class="bg-dark text-center">
            <a href="/albums/delete/<%= elem._id%>" class="btn btn-danger">Eliminar</a>
          </td>
        </tr>
        <%
        }
      }
        %>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
  <div class="container mt-3 d-flex justify-content-center">
    <a href="/albums/add" class="btn btn-info">Add</a>
  </div>
  <%
if (message) {
%>
  <span><%= message %></span>
  <%
}
%>
</body>
<% include ../_footer %>